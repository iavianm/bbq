<%= form_for @user, html: { multipart: true } do |f| %>

  <%= render partial: 'partials/form_errors', locals: { model: @user } %>

  <div class="mb-3">
    <%= f.label :Имя %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-success' %> <%= link_to 'Вернуться', :back, class: 'btn btn-secondary'%>
  </div>
<% end %>
